{% extends 'deelnemer.html.twig' %}
{% block menu %}
    <li><a href="{{ path('activiteiten') }}">home</a></li>


{% endblock %}


{% block content %}
    <section >
        {% for user in users %}
        <table class="table table-striped" style="table-layout: fixed">
            <caption>Dit zijn de deelnemers</caption>
            <thead>
            <tr>
                <td>naam</td>
                <td>adres</td>
                <td>postcode</td>
                <td>woonplaats</td>
                <td>bewerk</td>
                <td>delete</td>

            </tr>
            </thead>
            <tbody>


            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.naam }}</td>
                <td>{{ user.tussenvoegsel }}</td>
                <td>{{ user.achternaam }}</td>
                <td title="bewerk de gegevens van deze activiteit">


                    <a href="{{ path('update_deelnemer', {'id':user.id}) }}" >
                        <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                    </a>
                </td>
                <td>    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form></td>
            </tr>

            {% endfor %}
            </tbody>
        </table>
    </section>


{% endblock %}
